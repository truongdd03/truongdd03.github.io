{
    "root": true,
    "extends": [
        "plugin:vue/vue3-essential",
        "eslint:recommended",
        "@vue/eslint-config-typescript"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": ["warn", 4],
        "vue/multi-word-component-names": ["warn"],
        "quotes": [2, "single", "avoid-escape"],
        "vue/require-valid-default-prop": ["warn"],
        "vue/valid-v-for": ["warn"],
        "semi": [1, "always"]
    }
}
